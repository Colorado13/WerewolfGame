<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <filter>
        <filter-name>ProfanityFilter</filter-name>
        <filter-class>ca.werewolfgame.controllers.ProfanityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ProfanityFilter</filter-name>
        <servlet-name>NewMessage</servlet-name>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>ShowVotesServlet</servlet-name>
        <servlet-class>ca.werewolfgame.controllers.ShowVotesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowVotesServlet</servlet-name>
        <url-pattern>/ShowVotesServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>NewMessage</servlet-name>
        <servlet-class>ca.werewolfgame.controllers.NewMessage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewMessage</servlet-name>
        <url-pattern>/NewMessage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowVotesAgainstServlet</servlet-name>
        <servlet-class>ca.werewolfgame.controllers.ShowVotesAgainstServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowVotesAgainstServlet</servlet-name>
        <url-pattern>/ShowVotesAgainstServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetGameChatServlet</servlet-name>
        <servlet-class>ca.werewolfgame.controllers.GetGameChatServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetGameChatServlet</servlet-name>
        <url-pattern>/GetGameChatServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetWwChatServlet</servlet-name>
        <servlet-class>ca.werewolfgame.controllers.GetWWChatServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetWwChatServlet</servlet-name>
        <url-pattern>/GetWwChatServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetDeadChatServlet</servlet-name>
        <servlet-class>ca.werewolfgame.controllers.GetDeadChatServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetDeadChatServlet</servlet-name>
        <url-pattern>/GetDeadChatServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <security-role-ref>
            <role-name>Admin</role-name>
            <role-link>Admin</role-link>
        </security-role-ref>
        <servlet-name>CreateGameServlet</servlet-name>
        <servlet-class>ca.werewolfgame.controllers.CreateGameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateGameServlet</servlet-name>
        <url-pattern>/CreateGameServlet</url-pattern>
    </servlet-mapping>
    
    <security-role>
        <role-name>Admin</role-name>
    </security-role>
    <security-role>
        <role-name>Member</role-name>
    </security-role>
       
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admins Only</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        
        <auth-constraint>
            <role-name>Admin</role-name>
        </auth-constraint>
    </security-constraint>
    
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/MainPage.jsp</form-login-page>
            <form-error-page>/loginError.html</form-error-page>
        </form-login-config>
    </login-config>
</web-app>
